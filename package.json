{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "clean:output": "rimraf .output",
    "copy-readme-to-me": "node scripts/copy-readme-to-me.js",
    "dev": "pnpm run clean:output && pnpm run copy-readme-to-me && nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --fix",
    "stylelint:fix": "npx stylelint **/*.{css,scss,vue,less,html} --fix"
  },
  "dependencies": {
    "@giscus/vue": "^2.4.0",
    "@iconify-json/icon-park-outline": "^1.2.2",
    "@iconify-json/simple-icons": "^1.2.17",
    "@unocss/reset": "^0.57.7",
    "cosine-similarity": "^1.0.1",
    "date-fns": "^2.30.0",
    "marked": "^15.0.4",
    "natural": "^8.0.1",
    "scraperjs": "^1.2.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@nuxt/content": "^2.13.4",
    "@nuxtjs/stylelint-module": "^5.2.0",
    "@types/node": "^20.17.10",
    "@unocss/nuxt": "^0.57.7",
    "@vueuse/core": "^10.11.1",
    "@vueuse/nuxt": "^10.11.1",

    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.28.0",
    "@vue/eslint-config-prettier": "^9.0.0",

    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "postcss-html": "^1.6.0",

    "lint-staged": "^15.3.0",
    "nuxt": "^3.15.0",
    "sass": "^1.83.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2"
  },

  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "@vue/eslint-config-prettier"
    ],
    "rules": {
      "vue/dot-location": "off"
    }
  },

  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "customSyntax": "postcss-html",
    "rules": {
      "at-rule-no-unknown": null
    }
  },

  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },

  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,less,html}": [
      "stylelint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ]
  }
}